<div class="main">
  <img id="bg" src="https://images.unsplash.com/photo-1516321497487-e288fb19713f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=3300&q=80">
  <div class="container">
    <h1><strong>Nomadic Coder</strong></h1>
    <p>Do something great from anywhere in the world.</p>

     <%= form_tag map_path, method: :get do %>
      <%= text_field_tag :location, # field name (params key)
        params[:location], # value
          class: "form-control",
          placeholder: "Location"
      %>
      <%= select_tag :languages, options_for_select(%w[Java Python Swift]), multiple: true %>
      <%= submit_tag "Find a Tutor!", class: "btn btn-success" %>

    <% end %>
 </div>
</div>

<div class="row">
  <div class="col-md-9">
    <ul id="conversations-list">
      <% if @conversations %>
        <% @conversations.each do |conversation| %>
        <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
      <% end %>
      <% end %>
    </ul>
  </div>

  <div class="col-md-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">User list</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% if @users %>
            <% @users.each do |user| %>
            <li><%= link_to user.email, conversations_path(user_id: user), remote: true, method: :post %></li>
          <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
